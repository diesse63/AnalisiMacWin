{
  "name": "gestione-analisi-mediche",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "electron-context-menu": "^4.1.1"
  },
  "build": {
    "appId": "com.example.gestioneanalisi",
    "productName": "Gestione Analisi Mediche",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64", "ia32", "arm64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "artifactName": "${productName}-mac-${version}-${arch}.${ext}"
    }
  }
}
