{
  "name": "gestione-analisi-mediche",
  "version": "1.0.0",
  "description": "Gestione referti medici - applicazione portable",
  "author": "Diesse63",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "build-backend-win": "cd backend && build_exe.bat",
    "build-backend-mac": "cd backend && python3 -m PyInstaller --clean --noconfirm --onefile --name api api.py --distpath ./dist --workpath ./build",
    "dist": "electron-builder --publish never"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "electron-context-menu": "^4.1.1"
  },
  "build": {
    "appId": "com.gestioneanalisi.app",
    "productName": "Gestione Analisi Portable",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": [
          "api",
          "api.exe"
        ]
      }
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "artifactName": "${productName}_Mac_${arch}_${version}.${ext}",
      "identity": null
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "win": {
      "target": ["portable"],
      "artifactName": "${productName}_Portable_Win_${version}.${ext}"
    }
  }
}