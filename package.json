{
  "name": "gestione-analisi-mediche",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "electron-context-menu": "^4.1.1"
  },
  "build": {
    "appId": "com.gestioneanalisi.app",
    "productName": "Gestione Analisi Portable",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "backend/dist/api${exe}",
        "to": "backend/api${exe}"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}_Portable_Win_${version}.${ext}",
      "requestExecutionLevel": "user",
      "splashImage": "build/splash.bmp" 
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "artifactName": "${productName}_Mac_${arch}_${version}.${ext}"
    }
  }
}